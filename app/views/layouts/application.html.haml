!!! 5
%html
	%head
		<meta name="viewport" content="width=device-width, initial-scale=1">
		%title Week 1 Link Aggregator
		= stylesheet_link_tag    'application', 'min', 'narrow', media: 'all', 'data-turbolinks-track' => true 
		= javascript_include_tag 'application', 'data-turbolinks-track' => true 
		= csrf_meta_tags 
	%body
		%p.notice= notice
		%p.alert= alert
		.container
			.header.clearfix
				%nav
					%ul.nav.nav-pills.pull-right
						-if user_signed_in?
							%li{role: "presentation"}=link_to 'Add new website', new_website_path
							%li{role: "presentation"}=link_to 'Logout', destroy_user_session_path, method: :delete
						-else
							%li{role: "presentation"}=link_to 'Sign In', new_user_session_path
							%li{role: "presentation"}=link_to 'Sign Up', new_user_registration_path
				%h3.text-muted Own Progress Blog
			=yield
			=console

